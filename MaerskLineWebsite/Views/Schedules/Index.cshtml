@using MaerskLineWebsite.Controllers
@using MaerskLineWebsite.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Schedule</h2>

@using (Html.BeginForm("New", "Schedules"))
{
    <button class="btn btn-success">Create New Schedule</button>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Schedule ID</th>
            <th>Destination</th>
            <th>Origin</th>
            <th>Departure (Date & Time)</th>
            <th>Arrival (Date & Time)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var schedule in Model)
        {
        <tr>
            <td>@schedule.ScheduleId</td>
            <td>@schedule.Destination</td>
            <td>@schedule.Origin</td>
            <td>@schedule.DepartureDateTime</td>
            <td>@schedule.ArrivalDateTime</td>
            <br />
            <td>@Html.ActionLink("Edit", "Edit", new { id = schedule.ScheduleId }, new { @class = "btn btn-success btn-xs" })</td>

        </tr>
        }
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}