<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Maersk Line", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                   @if (User.Identity.IsAuthenticated)
                   {
                       if (User.IsInRole("Admin"))
                       { 
                            @*dropdown*@
                            <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">SHIP<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                               <li>@Html.ActionLink("Add Ship", "New", "Ships")</li>
                               <li>@Html.ActionLink("View Ship", "Index", "Ships")</li>
                            </ul>
                            </li>

                            <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">SCHEDULE<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                               <li>@Html.ActionLink("Add Schedule", "New", "Schedules")</li>
                               <li>@Html.ActionLink("View Schedule", "Index", "Schedules")</li>
                            </ul>
                            </li>

                           <li class="dropdown">
                               <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">BOOKING<span class="caret"></span></a>
                               <ul class="dropdown-menu" role="menu">
                                   <li>@Html.ActionLink("Add Booking", "SelectSchedule", "Bookings")</li>
                                   <li>@Html.ActionLink("View Booking", "ViewBooking", "Bookings")</li>
                               </ul>
                           </li>

                           <li class="dropdown">
                               <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">CUSTOMERS<span class="caret"></span></a>
                               <ul class="dropdown-menu" role="menu">
                                   <li>@Html.ActionLink("Add Customer", "New", "Customers")</li>
                                   <li>@Html.ActionLink("View Customer", "Index", "Customers")</li>

                               </ul>
                           </li>

                           <li>@Html.ActionLink("Register New Agent", "Register", "Account")</li>

                           
                       }

                       else
                       {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">BOOKING<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Add Booking", "SelectSchedule", "Bookings")</li>
                                    <li>@Html.ActionLink("View Booking", "ViewBooking", "Bookings")</li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">CUSTOMERS<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Add Customer", "New", "Customers")</li>
                                    <li>@Html.ActionLink("View Customer", "Index", "Customers")</li>

                                </ul>
                            </li>
                       }
                   }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
