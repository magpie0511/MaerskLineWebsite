@using MaerskLineWebsite.Controllers
@using MaerskLineWebsite.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Contact No.</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.CId</td>
            <td>@customer.FName</td>
            <td>@customer.LName</td>
            <td>@customer.Email</td>
            <td>@customer.ContactNo</td>
            
            <td>@Html.ActionLink("Edit", "Edit", new {cid = customer.CId})</td>

        </tr>
    }
    </tbody>
</table>