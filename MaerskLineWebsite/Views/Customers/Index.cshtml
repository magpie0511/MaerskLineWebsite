@using MaerskLineWebsite.Controllers
@using MaerskLineWebsite.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@using (Html.BeginForm("New", "Customers"))
{
    <button class="btn btn-success">Create New Customer</button>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Contact No.</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.CId</td>
            <td>@customer.FName</td>
            <td>@customer.LName</td>
            <td>@customer.Email</td>
            <td>@customer.ContactNo</td>
            <br />
            <td>@Html.ActionLink("Edit", "Edit", new { cid = customer.CId }, new { @class = "btn btn-success btn-xs" })</td>


        </tr>
        }
    </tbody>

</table>



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}

