@using MaerskLineWebsite.Controllers
@using MaerskLineWebsite.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ship</h2>

@using (Html.BeginForm("New", "Ships"))
{
    <button class="btn btn-success">Create New Ship</button>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ship ID</th>
            <th>Ship Name</th>
            <th>No. of Container</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var ship in Model)
        {
        <tr>
            <td>@ship.ShipId</td>
            <td>@ship.Name</td>
            <td>@ship.ContainerNo</td>
            <br />
            <td>@Html.ActionLink("Edit", "Edit", new { id = ship.ShipId }, new { @class = "btn btn-success btn-xs" })</td>

        </tr>
        }
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}

