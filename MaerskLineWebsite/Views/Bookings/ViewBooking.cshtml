@model List<MaerskLineWebsite.Models.Container>
@{
    ViewBag.Title = "ViewBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewBooking</h2>

<p>
    @Html.ActionLink("Create New Booking", "SelectSchedule", "Bookings", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Booking ID
        </th>
        <th>
            Booking Agent
        </th>
        <th>
            Customer ID
        </th>
        <th>
            Customer First Name
        </th>
        <th>
            Customer Last Name
        </th>
        <th>
            Customer Email
        </th>
        <th>
            Customer Contact No
        </th>
        <th>
            Ship ID
        </th>
        <th>
            Ship Name
        </th>
        <th>
            No. of Container
        </th>
        <th>
            Container ID
        </th>
        <th>
            Container Type
        </th>
        <th>
            Container Weight
        </th>
        <th>
            Schedule ID
        </th>
        <th>
            Schedule Origin
        </th>
        <th>
            Schedule Destination
        </th>
        <th>
            Schedule Departure Date & Time
        </th>
        <th>
            Schedule Arrival Date & Time
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.BookId
            </td>
            <td>
                @item.Booking.AgentBooked
            </td>
            <td>
                @item.Booking.Cid
            </td>
            <td>
                @item.Booking.Customer.FName
            </td>
            <td>
                @item.Booking.Customer.LName
            </td>
            <td>
                @item.Booking.Customer.Email
            </td>
            <td>
                @item.Booking.Customer.ContactNo
            </td>
            <td>
                @item.Booking.ShipId
            </td>
            <td>
                @item.Booking.Ship.Name
            </td>
            <td>
                @item.Booking.Ship.ContainerNo
            </td>
            <td>
                @item.ContainerId
            </td>
            <td>
                @item.ContainerType
            </td>
            <td>
                @item.ContainerWeight
            </td>
            <td>
                @item.Booking.ScheduleId
            </td>
            <td>
                @item.Booking.Schedule.Origin
            </td>
            <td>
                @item.Booking.Schedule.Destination
            </td>
            <td>
                @item.Booking.Schedule.DepartureDateTime
            </td>
            <td>
                @item.Booking.Schedule.ArrivalDateTime
            </td>
        </tr>
    }

</table>
