@model MaerskLineWebsite.ViewModel.ViewModelClass
@{
    ViewBag.Title = "SelectCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Customer</h2>

<table class="table">
    <tr>
        <th>
            Schedule ID
        </th>
        <th>
            Schedule Origin
        </th>
        <th>
            Schedule Destination
        </th>
        <th>
            Schedule Departure Date/Time
        </th>
        <th>
            Schedule Arrival Date/Time
        </th>
    </tr>
    <tr>
        <td>
            @Model.Schedule.ScheduleId
        </td>
        <td>
            @Model.Schedule.Origin
        </td>
        <td>
            @Model.Schedule.Destination
        </td>
        <td>
            @Model.Schedule.DepartureDateTime
        </td>
        <td>
            @Model.Schedule.ArrivalDateTime
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Ship ID
        </th>
        <th>
            Ship Name
        </th>
        <td>
            No. of Container
        </td>
    </tr>
    <tr>
        <td>
            @Model.Ship.ShipId

        </td>
        <td>
            @Model.Ship.Name
        </td>
        <td>
            @Model.Ship.ContainerNo
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            ContactNo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CustomersList)
    {
        <tr>
            <td>
                @item.FName
            </td>
            <td>
                @item.LName
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.ContactNo
            </td>
            <td>
                @Html.ActionLink("Select", "SelectContainer", "Bookings", new { Customerid = item.CId, Scheduleid = @Model.Schedule.ScheduleId, Shipid = @Model.Ship.ShipId }, new { @class = "btn btn-warning btn-xs" })
            </td>
        </tr>
    }

</table>